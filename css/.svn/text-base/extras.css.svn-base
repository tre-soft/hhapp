.form-control-normal {
    background-color: #FFFFFF;
    background-image: none;
    border: 1px solid #CCCCCC;
    border-radius: 4px;
    color: #555555;
    display: block;
    font-size: 13px;
    height: 34px;
    line-height: 1.42857;
    padding: 6px 12px;
    transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
    width: 100%;
}
.form-control-normal:focus {
    border-color: #66AFE9;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6);
    outline: 0 none;
}
.form-control-normal::-moz-placeholder {
    color: #999999;
    opacity: 1;
}
.form-control-normal[disabled], .form-control-normal[readonly], fieldset[disabled] .form-control-normal {
    background-color: #EEEEEE;
    cursor: not-allowed;
    opacity: 1;
}
textarea.form-control-normal {
    height: auto;
}


